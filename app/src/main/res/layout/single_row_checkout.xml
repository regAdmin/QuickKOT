<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtCode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
       />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtDescription"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtCode" />


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtQty"
        android:gravity="center"
        android:layout_toRightOf="@+id/txtSalesPrice"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtSalesPrice"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_toRightOf="@+id/txtDescription" />
<TextView
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Prep"
    android:layout_toRightOf="@+id/txtQty"
    android:gravity="center"
    android:id="@+id/txtPrepCheckout"
    android:visibility="gone"
    />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kitchen"
        android:layout_toRightOf="@+id/txtPrepCheckout"
        android:gravity="center"
        android:id="@+id/txtKitchenCheckout"
        />





</RelativeLayout>