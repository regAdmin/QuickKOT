<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/fragment_shape"
    >
    <ListView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/lstItemCheckout"
        android:layout_gravity="left"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="1"
            android:id="@+id/btn1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2"
            android:id="@+id/btn2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="3"
            android:id="@+id/btn3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="4"
            android:id="@+id/btn4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="5"
            android:id="@+id/btn5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="6"
            android:id="@+id/btn6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="7"
            android:id="@+id/btn7" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="8"
            android:id="@+id/btn8" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="9"
            android:id="@+id/btn9" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0"
            android:id="@+id/btn0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Del"
            android:id="@+id/btnDel" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Ent"
            android:id="@+id/btnEnter" />

    </LinearLayout>

</LinearLayout>
